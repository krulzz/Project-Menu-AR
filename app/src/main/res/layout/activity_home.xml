<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Background pattern (di belakang konten) -->
    <ImageView
        android:id="@+id/bg_pattern"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pattern1"
        android:alpha="0.08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@null"/>

    <!-- Konten scrollable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/home_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/foto_profil"
                    android:contentDescription="@null"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/HiApip"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/helbold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lapar"
                        android:textSize="14sp"
                        android:fontFamily="@font/helmed"
                        android:textColor="#666666"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/lonceng"
                    android:contentDescription="@null"/>
            </LinearLayout>

            <!-- Search Bar -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/search"
                android:drawableStart="@drawable/search_magnifier"
                android:background="@drawable/bg_search"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:fontFamily="@font/helmed"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:autofillHints="search"
                android:inputType="text"
                android:imeOptions="actionSearch"/>

            <!-- Section title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food_category"
                android:textStyle="bold"
                android:fontFamily="@font/helbold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"/>

            <!-- Category horizontal -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">

                    <!-- Sate -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="35dp">

                        <ImageButton
                            android:id="@+id/btn_sate_main"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/btn_sate"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/sate"
                            android:fontFamily="@font/helmed"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- Tongseng -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="35dp">

                        <ImageButton
                            android:id="@+id/btn_tongseng_main"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/btn_tongseng"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/texttongseng"
                            android:fontFamily="@font/helmed"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- Gulai -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="35dp">

                        <ImageButton
                            android:id="@+id/btn_gulai_main"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/btn_gulai"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/textsoto"
                            android:fontFamily="@font/helmed"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- Minuman -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <ImageButton
                            android:id="@+id/btn_minuman_main"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/btn_minuman"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/textminuman"
                            android:fontFamily="@font/helmed"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>


            <!-- Section title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textforyou"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"/>

            <!-- For You horizontal -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="152dp"
                        android:layout_height="217dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/btn_soto_ayam"
                        android:scaleType="center"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"/>

                    <!-- JANGAN match_parent di item horizontal -->
                    <ImageButton
                        android:layout_width="152dp"
                        android:layout_height="217dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/btn_tongsengg"
                        android:scaleType="center"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"/>

                    <ImageButton
                        android:layout_width="152dp"
                        android:layout_height="217dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/btn_gulaii"
                        android:scaleType="center"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"/>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Nav dipatok di bawah -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="8dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bottom_nav_home"
                android:contentDescription="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helmed"
                android:text="@string/texthome"
                android:textColor="#FF4155"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_scan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_scan"
                android:contentDescription="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textscan"
                android:textColor="#FF4155"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_setting"
                android:contentDescription="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textsetting"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
