<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/foto_profil"
            android:layout_marginEnd="12dp"
            android:id="@+id/profile"
            android:contentDescription="@null" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:text="@string/HiApip"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/HelBold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:text="@string/lapar"
                android:textSize="14sp"
                android:fontFamily="@font/HelMedium"
                android:textColor="#666666"/>
        </LinearLayout>

        <View android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/lonceng"
            android:contentDescription="@null"/>
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:hint="Cari makanan atau minuman"
        android:drawableStart="@drawable/search_magnifier"
        android:background="@drawable/bg_search"
        android:paddingStart="16sp"
        android:fontFamily="@font/HelMedium"
        android:textSize="15sp"
        android:layout_marginTop="16sp"
        android:autofillHints="search"
        android:inputType="text"
        android:imeOptions="actionSearch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Category"
        android:textStyle="bold"
        android:fontFamily="@font/HelBold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        />

    <!-- Category (dummy horizontal scroll) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Item Category -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_sate"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"
                    android:id="@+id/btn_sate_main"/>

                <TextView
                    android:text="Sate"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="-47dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/HelMedium"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_tongseng"
                    android:layout_marginLeft="50dp"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"/>

                <TextView
                    android:text="Tongseng"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="-65dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/HelMedium"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_gulai"
                    android:layout_marginLeft="30dp"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"/>

                <TextView
                    android:text="Gulai"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="-46dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/HelMedium"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_minuman"
                    android:layout_marginLeft="50dp"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"/>

                <TextView
                    android:text="Minuman"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="-60dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/HelMedium"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <!-- Tambahin item lain sejenis -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For You"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"/>

    <!-- Dummy horizontal menu -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        android:importantForAccessibility="no">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="152dp"
                android:layout_height="217dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_soto_ayam"
                android:scaleType="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                />
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_tongsengg"
                android:scaleType="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <ImageButton
                android:layout_width="152dp"
                android:layout_height="217dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_gulaii"
                android:scaleType="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Bottom Nav -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bottom_nav_home"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/HelMedium"
                android:text="Home"
                android:textColor="#FF4155"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_scan" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCAN 3D"
                android:textColor="#FF4155"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pattern1"
        android:layout_marginTop="-700dp"
        android:layout_marginBottom="550dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="-20dp"
        />
</LinearLayout>